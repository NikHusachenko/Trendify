@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center hero_img">
    <h1 class="display-1 hero_block">Створити замовлення</h1>
</div>

<div class="addingCuttingOrder">
    <div class="container align-self-center">
        <div class="row">
            <div class="col-lg-4 my-2 mx-1 card-body">
                <div class="col card-header display-6 text-center">
                    Add Order
                </div>
                <div class="card-text">
                    <div class="input-group my-3">
                        <span id="new_order" class="input-group-text">Name of order</span>
                        <input type="text" aria-label="Enter the name of order" class="form-control">
                    </div>

                    <div class="input-group my-3">
                        <span class="input-group-text">Quantity of details</span>
                        <input id="new_quantity" type="number" aria-label="Enter the quantity or details" class="form-control">
                    </div>

                    <div class="input-group my-3">
                        <label class="input-group-text" for="inputGroupSelectDetail">Choose the detail</label>
                        <select class="form-select" id="inputGroupSelectDetail">
                            <option value="0" selected>Choose...</option>
                            <option value="1">Detail One</option>
                            <option value="2">Detail Two</option>
                            <option value="3">Detail Three</option>
                            <option value="4">Detail Four</option>
                            <option value="5">Detail Five</option>
                            <option value="6">Detail Six</option>
                        </select>
                    </div>
                    <div class="text-center mb-3">
                        <button id ="submitOrderBtn" type="button" class="btn btn-warning btn-lg">Submit the order</button>
                    </div>
                </div>

            </div>

            <div class="col-lg-4 my-2 mx-1 card-body">
                <div class="col card-header display-6 text-center">
                    Delete Order
                </div>
                <div class="card-text">
                    <div class="input-group my-3">
                        <label class="input-group-text" for="inputGroupSelectDetail">Choose the order to delete</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">Order #1</option>
                            <option value="2">Order #2</option>
                        </select>
                    </div>
                    <div class="text-center my-3">
                        <button type="button" class="btn btn-warning btn-lg">Delete the order</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mx-1 my-2 card-body">
                <div class="col card-header display-6 text-center">
                    Change order
                </div>
                <div class="card-text">
                    <div class="input-group my-3">
                        <label class="input-group-text" for="inputGroupSelectDetail">Choose the order to change</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">Order #1</option>
                            <option value="2">Order #2</option>
                        </select>
                    </div>

                    <div class="input-group my-3">
                        <label class="input-group-text" for="inputGroupSelectDetail">Choose the item</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">Item One</option>
                            <option value="2">Item Two</option>
                            <option value="3">Item Three</option>
                            <option value="4">Item Four</option>
                            <option value="5">Item Five</option>
                            <option value="6">Item Six</option>
                        </select>
                    </div>

                    <div class="input-group my-3">
                        <span class="input-group-text">Quantity of items</span>
                        <input type="number" aria-label="Change the quantity or details" class="form-control">
                    </div>

                    <div class="text-center my-3">
                        <button type="button" class="btn btn-warning btn-lg">Change the order</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    const submitOrderBtn = document.getElementById('submitOrderBtn');

    submitOrderBtn.addEventListener('click', async () => {

        const name = document.querySelector('input[aria-label="Enter the name of order"]').value;
        const quantity = document.querySelector('input[aria-label="Enter the quantity or details"]').value;
        const detailSelect = document.getElementById('inputGroupSelectDetail');
        const selectedDetailId = detailSelect.value;

        const data = {
            Name: new_order,
            Quantity: new_quantity,
            DetailId: selectedDetailId
        };

        try {
            const response = await fetch('/api/materials/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                const responseData = await response.json();
                console.log('Order submitted successfully. Material ID:', responseData.MaterialId);
            } else {
                console.error('Failed to submit the order:', response.statusText);
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });
</script>