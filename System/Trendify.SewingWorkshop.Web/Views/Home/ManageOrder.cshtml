@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center hero_img">
    <h1 class="display-1 hero_block">Створити замовлення</h1>
</div>

<div class="addingCuttingOrder">
    <div class="container align-self-center text-white">

        <div class="row border">
            <div class="col border border-white display-6 text-center">
                Add Order
            </div>
            <div class="col border border-white display-6 text-center">
                Delete Order
            </div>
            <div class="col border border-white display-6 text-center">
                Change order
            </div>
        </div>

        <div class="row border">
            <div class="col border border-white">
                <div class="input-group my-3">
                    <span class="input-group-text">Name of order</span>
                    <input type="text" aria-label="Enter the name of order" class="form-control">
                </div>

                <div class="input-group my-3">
                    <span class="input-group-text">Quantity of details</span>
                    <input type="number" aria-label="Enter the quantity or details" class="form-control">
                </div>

                <div class="input-group my-3">
                    <label class="input-group-text" for="inputGroupSelectDetail">Оберіть частину</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1">Detail One</option>
                        <option value="2">Detail Two</option>
                        <option value="3">Detail Three</option>
                        <option value="4">Detail Four</option>
                        <option value="5">Detail Five</option>
                        <option value="6">Detail Six</option>
                    </select>
                </div>
                <div class="text-center mb-3">
                    <button type="button" class="btn btn-warning btn-lg">Submit the order</button>
                </div>
            </div>

            <div class="col border border-white">
                <div class="input-group my-3">
                    <label class="input-group-text" for="inputGroupSelectDetail">Choose the order to delete</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1">Order #1</option>
                        <option value="2">Order #2</option>
                    </select>
                </div>
                <div class="text-center my-3">
                    <button type="button" class="btn btn-warning btn-lg">Delete the order</button>
                </div>
            </div>
                
            <div class="col border border-white">
                <div class="input-group my-3">
                    <label class="input-group-text" for="inputGroupSelectDetail">Choose the order to change</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1">Order #1</option>
                        <option value="2">Order #2</option>
                    </select>
                </div>
                    
                <div class="input-group my-3">
                    <label class="input-group-text" for="inputGroupSelectDetail">Оберіть частину</label>
                    <select class="form-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1">Detail One</option>
                        <option value="2">Detail Two</option>
                        <option value="3">Detail Three</option>
                        <option value="4">Detail Four</option>
                        <option value="5">Detail Five</option>
                        <option value="6">Detail Six</option>
                    </select>
                </div>

                <div class="input-group my-3">
                    <span class="input-group-text">Quantity of details</span>
                    <input type="number" aria-label="Change the quantity or details" class="form-control">
                </div>

                <div class="text-center my-3">
                    <button type="button" class="btn btn-warning btn-lg">Change the order</button>
                </div>

            </div>

        </div>
    </div>
</div>
 